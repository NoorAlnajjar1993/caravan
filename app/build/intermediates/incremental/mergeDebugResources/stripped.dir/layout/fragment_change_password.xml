<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_3">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="12dp"
        android:src="@drawable/ic_arrow_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/neo_sans_arabic"
        android:text="@string/change_password"
        android:textColor="@color/dark_gray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_old_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/neo_sans_arabic_bold"
        android:text="@string/old_password"
        android:textColor="@color/dark_gray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_02" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tl_old_password"
        style="@style/AppTheme.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:layoutDirection="rtl"
        app:layout_constraintTop_toBottomOf="@+id/tv_old_password"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/light_gray">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_old_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/neo_sans_arabic"
            android:hint="@string/old_password"
            android:inputType="textPassword"
            android:maxLength="60"
            android:maxLines="1"
            android:textAlignment="viewStart"
            android:textColor="@color/dark_gray"
            android:textColorHint="@color/light_gray"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/gl_End"
            app:layout_constraintStart_toStartOf="@+id/gl_Start"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_new_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/neo_sans_arabic_bold"
        android:text="@string/new_password"
        android:textColor="@color/dark_gray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tl_old_password" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tl_new_password"
        style="@style/AppTheme.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:layoutDirection="rtl"
        app:layout_constraintTop_toBottomOf="@+id/tv_new_password"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/light_gray">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/neo_sans_arabic"
            android:hint="@string/new_password"
            android:inputType="textPassword"
            android:maxLength="60"
            android:maxLines="1"
            android:textAlignment="viewStart"
            android:textColor="@color/dark_gray"
            android:textColorHint="@color/light_gray"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/gl_End"
            app:layout_constraintStart_toStartOf="@+id/gl_Start"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/neo_sans_arabic_bold"
        android:text="@string/confirm_password"
        android:textColor="@color/dark_gray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tl_new_password" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tl_confirm_password"
        style="@style/AppTheme.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:layoutDirection="rtl"
        app:layout_constraintTop_toBottomOf="@+id/tv_confirm_password"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/light_gray">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/neo_sans_arabic"
            android:hint="@string/confirm_password"
            android:inputType="textPassword"
            android:maxLength="60"
            android:maxLines="1"
            android:textAlignment="viewStart"
            android:textColor="@color/dark_gray"
            android:textColorHint="@color/light_gray"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/gl_End"
            app:layout_constraintStart_toStartOf="@+id/gl_Start"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginVertical="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/purble"
        android:fontFamily="@font/neo_sans_arabic"
        android:text="@string/save"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tl_confirm_password" />


</androidx.constraintlayout.widget.ConstraintLayout>