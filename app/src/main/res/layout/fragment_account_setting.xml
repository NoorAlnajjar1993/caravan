<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_3">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="12dp"
                android:src="@drawable/ic_arrow_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/neo_sans_arabic"
                android:text="@string/account_settings"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/neo_sans_arabic_bold"
                android:text="@string/name"
                android:layout_marginHorizontal="16dp"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_02" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_name"
                style="@style/AppTheme.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:layoutDirection="rtl"
                app:layout_constraintTop_toBottomOf="@+id/tv_name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/neo_sans_arabic"
                    android:hint="@string/name"
                    android:inputType="text"
                    android:maxLength="60"
                    android:textAlignment="viewStart"
                    android:maxLines="1"
                    android:textColor="@color/dark_gray"
                    android:textColorHint="@color/light_gray"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/gl_End"
                    app:layout_constraintStart_toStartOf="@+id/gl_Start"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/neo_sans_arabic_bold"
                android:text="@string/phone_number"
                android:layout_marginHorizontal="16dp"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tl_name" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_phone_number"
                style="@style/AppTheme.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:layoutDirection="rtl"
                app:layout_constraintTop_toBottomOf="@+id/tv_phone_number">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/neo_sans_arabic"
                    android:hint="@string/phone_number"
                    android:inputType="phone"
                    android:maxLength="60"
                    android:textAlignment="viewStart"
                    android:maxLines="1"
                    android:textColor="@color/dark_gray"
                    android:textColorHint="@color/light_gray"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/gl_End"
                    app:layout_constraintStart_toStartOf="@+id/gl_Start"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

            </com.google.android.material.textfield.TextInputLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_whatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/neo_sans_arabic_bold"
                android:text="@string/whatsapp"
                android:layout_marginHorizontal="16dp"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tl_phone_number" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_whatsapp"
                style="@style/AppTheme.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:layoutDirection="rtl"
                app:layout_constraintTop_toBottomOf="@+id/tv_whatsapp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_whatsapp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/neo_sans_arabic"
                    android:hint="@string/whatsapp"
                    android:inputType="phone"
                    android:maxLength="60"
                    android:textAlignment="viewStart"
                    android:maxLines="1"
                    android:textColor="@color/dark_gray"
                    android:textColorHint="@color/light_gray"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/gl_End"
                    app:layout_constraintStart_toStartOf="@+id/gl_Start"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_introduction_optional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/neo_sans_arabic_bold"
                android:text="@string/introduction_optional"
                android:layout_marginHorizontal="16dp"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tl_whatsapp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_introduction_optional"
                style="@style/AppTheme.EditText"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:layoutDirection="rtl"
                app:layout_constraintTop_toBottomOf="@+id/tv_introduction_optional">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_introduction_optional"
                    android:layout_width="match_parent"
                    android:layout_height="77dp"
                    android:fontFamily="@font/neo_sans_arabic"
                    android:hint="@string/if_write_introductory_overview"
                    android:inputType="textMultiLine"
                    android:gravity="start|top"
                    android:maxLength="60"
                    android:maxLines="1"
                    android:textColor="@color/dark_gray"
                    android:textColorHint="@color/light_gray"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/gl_End"
                    app:layout_constraintStart_toStartOf="@+id/gl_Start"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

            </com.google.android.material.textfield.TextInputLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_change_password"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="27dp"
                android:background="@drawable/outline_light_purple"
                android:drawableStart="@drawable/ic_arrow_circle_right"
                android:drawableEnd="@drawable/ic_padlock"
                android:drawablePadding="12dp"
                android:fontFamily="@font/neo_sans_arabic_bold"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:text="@string/change_password"
                android:textColor="@color/dark_gray"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/tl_introduction_optional" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/neo_sans_arabic"
                android:text="@string/logout"
                android:layout_marginHorizontal="16dp"
                android:textColor="@color/red_light"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_change_password" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_delete_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/neo_sans_arabic"
                android:text="@string/delete_account"
                android:layout_marginHorizontal="16dp"
                android:textColor="@color/light_gray"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_logout" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btn_view_my_profile"
                android:layout_width="89dp"
                android:layout_height="44dp"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@null"
                android:fontFamily="@font/neo_sans_arabic"
                android:text="@string/view_my_profile"
                android:background="@drawable/outline_light_purple"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="16sp"
                app:cornerRadius="@dimen/_8sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_next"
                app:layout_constraintTop_toTopOf="@+id/btn_next"
                app:layout_constraintBottom_toBottomOf="@+id/btn_next"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_next"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:backgroundTint="@color/purble"
                android:fontFamily="@font/neo_sans_arabic"
                android:text="@string/next"
                android:layout_marginTop="32dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:cornerRadius="@dimen/_8sdp"
                app:layout_constraintStart_toEndOf="@+id/btn_view_my_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_delete_account" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>