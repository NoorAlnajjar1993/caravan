<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_3">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="12dp"
        android:src="@drawable/ic_arrow_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/neo_sans_arabic"
        android:text="ميّز اعلانك"
        android:textColor="@color/dark_gray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

<!--    Premium Ad-->
  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/constraintLayout_01"
      app:layout_constraintTop_toBottomOf="@+id/tv_title"
      android:layout_width="match_parent"
      android:layout_marginHorizontal="16dp"
      android:layout_marginTop="32dp"
      android:layout_height="wrap_content">

      <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/textView_01"
          android:layout_width="match_parent"
          android:paddingEnd="16dp"
          android:text="اعلان بريميوم"
          app:layout_constraintTop_toTopOf="parent"
          android:textColor="@color/yellow_01"
          android:fontFamily="@font/neo_sans_arabic_bold"
          android:gravity="center_vertical"
          android:background="@drawable/custom_bg_sheet_purple"
          android:layout_height="39dp"/>

      <androidx.appcompat.widget.LinearLayoutCompat
          android:id="@+id/linearLayoutCompat_01"
          android:layout_width="match_parent"
          app:layout_constraintTop_toBottomOf="@+id/textView_01"
          android:orientation="vertical"
          android:background="@drawable/outline_in_purple"
          android:layout_height="wrap_content">
          <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="match_parent"
              android:layout_marginTop="18dp"
              android:text="الممييزات:"
              android:paddingEnd="16dp"
              android:textSize="16sp"
              android:textColor="@color/purble"
              android:fontFamily="@font/neo_sans_arabic_bold"
              android:gravity="center_vertical"
              android:layout_height="wrap_content"/>

          <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="match_parent"
              android:drawableEnd="@drawable/ic_dot_black"
              android:text="100 ضعف ظهور أكثر من الاعلان العادي"
              android:paddingEnd="16dp"
              android:textColor="@color/dark_gray"
              android:textSize="12sp"
              android:fontFamily="@font/neo_sans_arabic"
              android:gravity="center_vertical"
              android:layout_height="wrap_content"/>

          <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="match_parent"
              android:drawableEnd="@drawable/ic_dot_black"
              android:text="يظهر الاعلان بحجم كبير في بداية صفحات البحث"
              android:paddingEnd="16dp"
              android:textColor="@color/dark_gray"
              android:textSize="12sp"
              android:fontFamily="@font/neo_sans_arabic"
              android:gravity="center_vertical"
              android:layout_height="wrap_content"/>

          <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="match_parent"
              android:drawableEnd="@drawable/ic_dot_black"
              android:text="يصل لعدد آكبر من المهتمين"
              android:paddingEnd="16dp"
              android:textColor="@color/dark_gray"
              android:textSize="12sp"
              android:fontFamily="@font/neo_sans_arabic"
              android:gravity="center_vertical"
              android:layout_height="wrap_content"/>

          <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="match_parent"
              android:drawableEnd="@drawable/ic_dot_black"
              android:text="سعر الاعلان 50 دينار"
              android:paddingEnd="16dp"
              android:textColor="@color/purble"
              android:textSize="12sp"
              android:fontFamily="@font/neo_sans_arabic_bold"
              android:gravity="center_vertical"
              android:paddingBottom="18dp"
              android:layout_height="wrap_content"/>
      </androidx.appcompat.widget.LinearLayoutCompat>



  </androidx.constraintlayout.widget.ConstraintLayout>
<!--    Featured advertisement-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_02"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout_01"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_02"
            android:layout_width="match_parent"
            android:paddingEnd="16dp"
            android:text="اعلان مميز"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/yellow_01"
            android:fontFamily="@font/neo_sans_arabic_bold"
            android:gravity="center_vertical"
            android:background="@drawable/custom_bg_sheet_purple"
            android:layout_height="39dp"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearLayoutCompat_02"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_02"
            android:orientation="vertical"
            android:background="@drawable/outline_in_purple2"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_marginTop="18dp"
                android:text="الممييزات:"
                android:paddingEnd="16dp"
                android:textSize="16sp"
                android:textColor="@color/purble"
                android:fontFamily="@font/neo_sans_arabic_bold"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:drawableEnd="@drawable/ic_dot_black"
                android:text="100 ضعف ظهور أكثر من الاعلان العادي"
                android:paddingEnd="16dp"
                android:textColor="@color/dark_gray"
                android:textSize="12sp"
                android:fontFamily="@font/neo_sans_arabic"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:drawableEnd="@drawable/ic_dot_black"
                android:text="يظهر الاعلان بحجم كبير في بداية صفحات البحث"
                android:paddingEnd="16dp"
                android:textColor="@color/dark_gray"
                android:textSize="12sp"
                android:fontFamily="@font/neo_sans_arabic"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:drawableEnd="@drawable/ic_dot_black"
                android:text="يصل لعدد آكبر من المهتمين"
                android:paddingEnd="16dp"
                android:textColor="@color/dark_gray"
                android:textSize="12sp"
                android:fontFamily="@font/neo_sans_arabic"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:drawableEnd="@drawable/ic_dot_black"
                android:text="سعر الاعلان 25 دينار"
                android:paddingEnd="16dp"
                android:textColor="@color/purble"
                android:textSize="12sp"
                android:fontFamily="@font/neo_sans_arabic_bold"
                android:gravity="center_vertical"
                android:paddingBottom="18dp"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>



    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:text="المجموع: 50 JD"
        android:paddingEnd="20dp"
        android:textColor="@color/purble"
        app:layout_constraintBottom_toTopOf="@+id/btn_next"
        android:textSize="16sp"
        android:fontFamily="@font/neo_sans_arabic"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/purble"
        android:fontFamily="@font/neo_sans_arabic"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>