<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_3">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_close"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="12dp"
        android:src="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:fontFamily="@font/neo_sans_arabic_bold"
        android:text="@string/enter_confirmation_code"
        android:textColor="@color/purble"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_close" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/imageView_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/neo_sans_arabic"
        android:gravity="center"
        android:text="@string/we_have_sent_confirmation_code"
        android:textColor="@color/light_gray_4"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_02" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tl_number_1"
        style="@style/AppTheme.EditText"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tl_number_2"
        app:layout_constraintTop_toBottomOf="@+id/imageView_03">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_number_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/neo_sans_arabic"
            android:hint="___"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:textColor="@color/dark_gray"
            android:textColorHint="@color/light_gray"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/gl_End"
            app:layout_constraintStart_toStartOf="@+id/gl_Start"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tl_number_2"
        style="@style/AppTheme.EditText"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toEndOf="@+id/tl_number_1"
        app:layout_constraintEnd_toStartOf="@+id/tl_number_3"
        app:layout_constraintTop_toBottomOf="@+id/imageView_03">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_number_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/neo_sans_arabic"
            android:hint="___"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="1"
            android:maxLines="1"
            android:textColor="@color/dark_gray"
            android:textColorHint="@color/light_gray"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/gl_End"
            app:layout_constraintStart_toStartOf="@+id/gl_Start"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tl_number_3"
        style="@style/AppTheme.EditText"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toEndOf="@+id/tl_number_2"
        app:layout_constraintEnd_toStartOf="@+id/tl_number_4"
        app:layout_constraintTop_toBottomOf="@+id/imageView_03">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_number_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/neo_sans_arabic"
            android:hint="___"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/dark_gray"
            android:textColorHint="@color/light_gray"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/gl_End"
            app:layout_constraintStart_toStartOf="@+id/gl_Start"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tl_number_4"
        style="@style/AppTheme.EditText"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/tl_number_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_03">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_number_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/neo_sans_arabic"
            android:hint="___"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/dark_gray"
            android:textColorHint="@color/light_gray"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/gl_End"
            app:layout_constraintStart_toStartOf="@+id/gl_Start"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_03"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView_04"
        android:layout_marginTop="24dp"
        android:textColor="@color/light_gray_4"
        android:layout_marginHorizontal="2dp"
        android:fontFamily="@font/neo_sans_arabic"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/tl_number_4"
        android:text="@string/seconds"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_04"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/textView_03"
        app:layout_constraintEnd_toStartOf="@+id/textView_05"
        android:layout_marginTop="24dp"
        android:textColor="@color/purble"
        android:layout_marginHorizontal="2dp"
        android:fontFamily="@font/neo_sans_arabic"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/tl_number_4"
        android:text="40"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_05"
        android:layout_width="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toEndOf="@+id/textView_04"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="2dp"
        android:textColor="@color/light_gray_4"
        android:fontFamily="@font/neo_sans_arabic"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/tl_number_4"
        android:text="@string/resend_in"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_height="wrap_content"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_continuation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginVertical="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/purble"
        android:fontFamily="@font/neo_sans_arabic"
        android:text="@string/continuation"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>