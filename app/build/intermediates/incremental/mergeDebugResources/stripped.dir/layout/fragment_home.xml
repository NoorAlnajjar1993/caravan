<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.dominate.caravan.ui.onboarding.TalkThrough1Fragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingBottom="20dp"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:scaleType="fitXY"
                android:src="@drawable/rect_purple_1"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.247" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/mageView_01"
                android:layout_width="108dp"
                android:layout_height="32dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_caravan_01"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout_01"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="30dp"
                android:paddingVertical="16dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/outline_gray"
                app:layout_constraintTop_toBottomOf="@+id/mageView_01">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_rent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rent"
                    android:fontFamily="@font/neo_sans_arabic"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    android:drawableBottom="@drawable/underline_gray"
                    android:textColor="@color/light_gray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_sale"
                    app:layout_constraintTop_toTopOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sale"
                    android:fontFamily="@font/neo_sans_arabic"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    app:layout_constraintStart_toEndOf="@+id/tv_rent"
                    android:textSize="16sp"
                    android:drawableBottom="@drawable/underline_purple"
                    android:textColor="@color/purble"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btn_commercial_real_estate"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/commercial_real_estate"
                    app:layout_constraintEnd_toStartOf="@+id/btn_land_farm"
                    android:fontFamily="@font/neo_sans_arabic"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sale"
                    android:textColor="@color/black"
                    android:layout_marginTop="18dp"
                    android:gravity="center"
                    android:background="@drawable/custom_bg_gray"
                    android:paddingHorizontal="8dp"
                    android:layout_height="44dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btn_land_farm"
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/btn_commercial_real_estate"
                    app:layout_constraintEnd_toStartOf="@+id/btn_house_villa"
                    android:text="@string/land_farm"
                    android:fontFamily="@font/neo_sans_arabic"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sale"
                    android:textColor="@color/black"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="4dp"
                    android:gravity="center"
                    android:paddingHorizontal="8dp"
                    android:background="@drawable/custom_bg_gray"
                    android:layout_height="44dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btn_house_villa"
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/btn_land_farm"
                    android:text="@string/house_villa"
                    android:fontFamily="@font/neo_sans_arabic"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sale"
                    app:layout_constraintEnd_toStartOf="@+id/btn_partment"
                    android:textColor="@color/black"
                    android:layout_marginStart="4dp"
                    android:paddingHorizontal="8dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="4dp"
                    android:gravity="center"
                    android:background="@drawable/custom_bg_gray"
                    android:layout_height="44dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btn_partment"
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/btn_house_villa"
                    android:text="@string/partment"
                    android:paddingHorizontal="8dp"
                    android:fontFamily="@font/neo_sans_arabic"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sale"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="18dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/black"
                    android:background="@drawable/custom_bg_yellow"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_height="44dp"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_search_view"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/custom_bg_gray"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/btn_partment"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:hint="@string/search"
                        android:fontFamily="@font/neo_sans_arabic"
                        android:id="@+id/et_search"
                        android:inputType="text"
                        android:drawablePadding="8dp"
                        android:paddingHorizontal="24dp"
                        android:drawableStart="@drawable/ic_search"
                        android:drawableEnd="@drawable/ic_location"
                        android:textColorHint="@color/light_gray_1"
                        android:textColor="@color/light_gray_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:background="@drawable/custom_bg_gray"
                        android:textSize="14sp"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_next"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginStart="@dimen/_25sdp"
                    android:layout_marginEnd="@dimen/_25sdp"
                    android:backgroundTint="@color/purble"
                    android:fontFamily="@font/neo_sans_arabic"
                    android:text="@string/next"
                    android:textAllCaps="false"
                    android:layout_marginVertical="16dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:cornerRadius="@dimen/_8sdp"
                    app:layout_constraintTop_toBottomOf="@+id/ll_search_view" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView_01"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout_01"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:scaleType="fitXY"
                android:layout_marginTop="25dp"
                android:src="@drawable/photo4"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/neo_sans_arabic"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="25dp"
                android:textColor="@color/purble"
                android:textStyle="bold"
                android:text="@string/more"
                app:layout_constraintTop_toBottomOf="@+id/imageView_01"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_featured_ads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/neo_sans_arabic"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="25dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/featured_ads_"
                app:layout_constraintTop_toBottomOf="@+id/imageView_01"/>

            <include
                android:id="@+id/include_distinct_advertisment"
                layout="@layout/row_distinct_advertisment" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/neo_sans_arabic"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="25dp"
                android:textColor="@color/purble"
                android:textStyle="bold"
                android:text="@string/more"
                app:layout_constraintTop_toBottomOf="@+id/include_distinct_advertisment"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_housing_ads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/neo_sans_arabic"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="25dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/housing_ads"
                app:layout_constraintTop_toBottomOf="@+id/include_distinct_advertisment"/>

            <include
                android:id="@+id/include_row_housing_ads"
                layout="@layout/row_housing_ads" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/neo_sans_arabic"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="25dp"
                android:textColor="@color/purble"
                android:textStyle="bold"
                android:text="@string/more"
                app:layout_constraintTop_toBottomOf="@+id/include_row_housing_ads"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_properties_near_you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/neo_sans_arabic"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="25dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/properties_near_you"
                app:layout_constraintTop_toBottomOf="@+id/include_row_housing_ads"/>

            <include
                android:id="@+id/include_properties_near_you"
                layout="@layout/row_properties_near_you" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/neo_sans_arabic"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="25dp"
                android:textColor="@color/purble"
                android:textStyle="bold"
                android:text="@string/more"
                app:layout_constraintTop_toBottomOf="@+id/include_properties_near_you"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_latest_ads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/neo_sans_arabic"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="25dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/latest_ads"
                app:layout_constraintTop_toBottomOf="@+id/include_properties_near_you"/>

            <include
                android:id="@+id/include_latest_ads"
                layout="@layout/row_latest_ads" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:paddingBottom="25dp"
                android:background="@drawable/custom_bg_gray"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@+id/include_latest_ads"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageView_03"
                    android:layout_width="wrap_content"
                    android:src="@drawable/photo6"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textView_05"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView_03"
                    android:text="@string/increase_the_chances"
                    android:textSize="16sp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/neo_sans_arabic"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="18dp"
                    android:layout_height="wrap_content"/>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textView_06"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView_05"
                    android:text="@string/add_your_ad_now"
                    android:textSize="16sp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/neo_sans_arabic_bold"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="18dp"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textView_07"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView_06"
                    android:text="@string/adv_1"
                    android:textSize="14sp"
                    android:drawablePadding="8dp"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/neo_sans_arabic"
                    android:drawableEnd="@drawable/ic_check"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="18dp"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textView_08"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView_07"
                    android:text="@string/adv_2"
                    android:textSize="14sp"
                    android:drawablePadding="8dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/neo_sans_arabic"
                    android:drawableEnd="@drawable/ic_check"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="18dp"
                    android:layout_height="wrap_content"/>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textView_09"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView_08"
                    android:text="@string/adv_3"
                    android:textSize="14sp"
                    android:drawablePadding="8dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/neo_sans_arabic"
                    android:drawableEnd="@drawable/ic_check"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginEnd="18dp"
                    android:layout_height="wrap_content"/>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_Post_ad_now"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginHorizontal="18dp"
                    android:backgroundTint="@color/purble"
                    android:fontFamily="@font/neo_sans_arabic"
                    android:text="@string/Post_ad_now"
                    android:textAllCaps="false"
                    android:layout_marginVertical="16dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:cornerRadius="@dimen/_8sdp"
                    app:layout_constraintTop_toBottomOf="@+id/textView_09" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>