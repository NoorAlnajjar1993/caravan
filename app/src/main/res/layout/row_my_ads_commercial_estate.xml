<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="item"
            type="com.dominate.caravan.medule.home.CommercialEstate" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout01"
        android:layout_width="match_parent"
        android:padding="8dp"
        android:background="@drawable/outline_light_purple"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/photo9"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            tools:text="فيلا للبيع في خلدا"
            android:text="@{item.title}"
            android:fontFamily="@font/neo_sans_arabic"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/dark_gray"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@+id/iv_image"
            app:layout_constraintEnd_toStartOf="@+id/iv_image"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_seen"
            android:layout_width="wrap_content"
            android:text="829"
            android:drawableEnd="@drawable/ic_seen"
            android:fontFamily="@font/neo_sans_arabic"
            android:textSize="12sp"
            android:drawablePadding="8dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/light_gray"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            app:layout_constraintEnd_toStartOf="@+id/iv_image"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            tools:text="30.000 JOD"
            android:text="@{String.valueOf(item.price) + ' ' + @string/jod}"
            android:fontFamily="@font/neo_sans_arabic"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/purble"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_seen"
            app:layout_constraintEnd_toStartOf="@+id/iv_image"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:gravity="start"
            android:text="@{item.date}"
            android:fontFamily="@font/neo_sans_arabic"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/light_gray"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_seen"
            app:layout_constraintEnd_toStartOf="@+id/iv_image"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_delete"
            app:layout_constraintTop_toBottomOf="@+id/tv_date"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="11dp"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_play"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_play"
            android:layout_marginEnd="11dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_date"
            app:layout_constraintStart_toEndOf="@+id/iv_delete"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_edit"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_edit"
            android:layout_marginEnd="11dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_date"
            app:layout_constraintStart_toEndOf="@+id/iv_play"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvFeatureAds"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_bg_yellow"
            app:layout_constraintTop_toBottomOf="@+id/tv_date"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/purble"
            android:fontFamily="@font/neo_sans_arabic"
            android:paddingVertical="4dp"
            android:textStyle=""
            app:layout_constraintStart_toEndOf="@+id/iv_edit"
            app:layout_constraintEnd_toStartOf="@+id/iv_image"
            android:text="@string/make_your_ad_standout"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>