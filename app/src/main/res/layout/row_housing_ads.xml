<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="item"
            type="com.dominate.caravan.medule.home.HousingAd" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:id="@+id/constraintLayout01"
        android:background="@drawable/outline_light_purple"
        android:layout_marginHorizontal="20dp"
        android:paddingBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_housing_ads"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            app:strokeColor="@color/purble"
            app:strokeWidth="0.5dp"
            android:adjustViewBounds="true"
            app:shapeAppearanceOverlay="@style/rectangularImageView"
            android:id="@+id/imageView_02"
            android:layout_width="194dp"
            android:src="@drawable/ic_building_hint"
            android:layout_height="194dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/housing"
            android:padding="8dp"
            android:textStyle="bold"
            android:layout_margin="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/neo_sans_arabic"
            android:textColor="@color/purble"
            android:background="@drawable/custom_bg_light_blue"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="فيلا للبيع في خلدا"
            android:text="@{item.title}"
            android:textStyle="bold"
            android:layout_margin="12dp"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView_02"
            android:fontFamily="@font/neo_sans_arabic"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="عمان. خلدا"
            android:text="@{item.region}"
            android:layout_marginEnd="12dp"
            android:drawablePadding="3dp"
            android:drawableEnd="@drawable/ic_location_purple"
            android:lines="1"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            android:fontFamily="@font/neo_sans_arabic"
            android:textColor="@color/light_gray" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_direction"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="2 حمام"
            android:text="@{String.valueOf(item.numberOfBathrooms) + ' ' +  @string/bathroom}"
            android:textSize="16sp"
            android:layout_marginEnd="12dp"
            android:drawablePadding="3dp"
            android:drawableEnd="@drawable/ic_bathroom"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_location"
            android:fontFamily="@font/neo_sans_arabic"
            android:textColor="@color/light_gray" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageView_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_direction"
            app:layout_constraintTop_toTopOf="@+id/tv_direction"
            app:layout_constraintEnd_toStartOf="@+id/tv_direction"
            android:src="@drawable/ic_circle_light_gray"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="2 غرف"
            android:text="@{String.valueOf(item.numberOfBedrooms) + ' ' +  @string/room}"
            android:textSize="16sp"
            android:layout_marginEnd="12dp"
            android:drawablePadding="3dp"
            android:drawableEnd="@drawable/ic_area"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@+id/imageView_03"
            app:layout_constraintTop_toBottomOf="@+id/tv_location"
            android:fontFamily="@font/neo_sans_arabic"
            android:textColor="@color/light_gray" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="30.000 JOD"
            android:text="@{String.valueOf(item.price) + ' ' + @string/jod}"
            android:textSize="17sp"
            android:layout_marginEnd="12dp"
            android:lines="1"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_distance"
            android:fontFamily="@font/neo_sans_arabic"
            android:textColor="@color/purble" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_favourite"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_favourite"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>