<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_3">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="12dp"
                android:src="@drawable/ic_arrow_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/neo_sans_arabic"
                android:text="تم إضافة الإعلان بنجاح"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

          <androidx.appcompat.widget.AppCompatImageView
              android:id="@+id/complete_1"
              app:layout_constraintTop_toBottomOf="@+id/iv_back"
              app:layout_constraintStart_toStartOf="parent"
              android:src="@drawable/complete_1"
              android:layout_marginTop="54dp"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/complete_2"
                app:layout_constraintTop_toTopOf="@+id/complete_1"
                app:layout_constraintBottom_toBottomOf="@+id/complete_1"
                app:layout_constraintStart_toStartOf="@+id/complete_1"
                app:layout_constraintEnd_toEndOf="@+id/complete_1"
                android:src="@drawable/complete_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/complete_3"
                app:layout_constraintTop_toTopOf="@+id/complete_2"
                app:layout_constraintBottom_toBottomOf="@+id/complete_2"
                app:layout_constraintStart_toStartOf="@+id/complete_2"
                android:src="@drawable/complete_3"
                app:layout_constraintEnd_toEndOf="@+id/complete_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/complete_4"
                app:layout_constraintTop_toTopOf="@+id/complete_2"
                app:layout_constraintBottom_toBottomOf="@+id/complete_2"
                app:layout_constraintStart_toStartOf="@+id/complete_2"
                android:src="@drawable/complete_4"
                app:layout_constraintEnd_toEndOf="@+id/complete_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_text_01"
                app:layout_constraintTop_toBottomOf="@+id/complete_1"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/neo_sans_arabic_bold"
                android:layout_marginTop="40dp"
                android:textSize="16sp"
                android:text="اكتملت الخطوات"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_text_02"
                app:layout_constraintTop_toBottomOf="@+id/tv_text_01"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/neo_sans_arabic"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:text="اعلانك الآن قيد المراجعة ، سوف يتم نشره \n بمجرد الموافقة عليه"
                android:layout_height="wrap_content"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_text_02"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                android:padding="15dp"
                android:background="@drawable/custom_bg_yellow_01"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_text_03"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:text="ميّز اعلانك !"
                    android:textColor="@color/purble"
                    android:fontFamily="@font/neo_sans_arabic_bold"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_text_04"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_text_03"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:text="لعرضه في مقدمة الاعلانات والوصول الى \n مشاهدين اكثر"
                    android:textColor="@color/dark_gray"
                    android:fontFamily="@font/neo_sans_arabic"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/ic_arrow_left"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>