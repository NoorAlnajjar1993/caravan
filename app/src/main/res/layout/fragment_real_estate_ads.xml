<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_3">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="12dp"
                android:src="@drawable/ic_arrow_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/neo_sans_arabic"
                android:text="@string/my_real_estate_ads"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_rejected"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/custom_bg_gray"
                android:backgroundTint="@null"
                android:fontFamily="@font/neo_sans_arabic"
                android:gravity="center"
                android:text="@string/rejected"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:cornerRadius="@dimen/_8sdp"
                app:layout_constraintEnd_toStartOf="@+id/tv_arrested"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_02" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_arrested"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/custom_bg_gray"
                android:backgroundTint="@null"
                android:fontFamily="@font/neo_sans_arabic"
                android:gravity="center"
                android:text="@string/arrested"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:cornerRadius="@dimen/_8sdp"
                app:layout_constraintEnd_toStartOf="@+id/tv_under_review"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@+id/tv_rejected"
                app:layout_constraintTop_toBottomOf="@+id/textView_02" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_under_review"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/custom_bg_gray"
                android:backgroundTint="@null"
                android:fontFamily="@font/neo_sans_arabic"
                android:gravity="center"
                android:text="@string/under_review"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:cornerRadius="@dimen/_8sdp"
                app:layout_constraintEnd_toStartOf="@+id/tv_effective"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@+id/tv_arrested"
                app:layout_constraintTop_toBottomOf="@+id/textView_02" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_effective"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/custom_bg_purple"
                android:backgroundTint="@null"
                android:fontFamily="@font/neo_sans_arabic"
                android:gravity="center"
                android:text="@string/effective"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:cornerRadius="@dimen/_8sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@+id/tv_under_review"
                app:layout_constraintTop_toBottomOf="@+id/textView_02" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                android:padding="8dp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_effective"
                android:background="@drawable/outline_light_purple"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/photo9"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:text="فيلا للبيع في خلدا"
                    android:fontFamily="@font/neo_sans_arabic"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_gray"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toTopOf="@+id/iv_image"
                    app:layout_constraintEnd_toStartOf="@+id/iv_image"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_seen"
                    android:layout_width="wrap_content"
                    android:text="829"
                    android:drawableEnd="@drawable/ic_seen"
                    android:fontFamily="@font/neo_sans_arabic"
                    android:textSize="12sp"
                    android:drawablePadding="8dp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/light_gray"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_name"
                    app:layout_constraintEnd_toStartOf="@+id/iv_image"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:text="30.000 JOD"
                    android:fontFamily="@font/neo_sans_arabic"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/purble"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_seen"
                    app:layout_constraintEnd_toStartOf="@+id/iv_image"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_date"
                    android:layout_width="match_parent"
                    android:gravity="start"
                    android:text="23/10/2023"
                    android:fontFamily="@font/neo_sans_arabic"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/light_gray"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_seen"
                    app:layout_constraintEnd_toStartOf="@+id/iv_image"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_delete"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_delete"
                    app:layout_constraintTop_toBottomOf="@+id/tv_date"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="11dp"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_play"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_play"
                    android:layout_marginEnd="11dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_date"
                    app:layout_constraintStart_toEndOf="@+id/iv_delete"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_edit"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_edit"
                    android:layout_marginEnd="11dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_date"
                    app:layout_constraintStart_toEndOf="@+id/iv_play"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_bg_yellow"
                    app:layout_constraintTop_toBottomOf="@+id/tv_date"
                    android:layout_marginHorizontal="10dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/purble"
                    android:fontFamily="@font/neo_sans_arabic"
                    android:paddingVertical="4dp"
                    android:textStyle=""
                    app:layout_constraintStart_toEndOf="@+id/iv_edit"
                    app:layout_constraintEnd_toStartOf="@+id/iv_image"
                    android:text="@string/make_your_ad_standout"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>